@echo off
REM =============================================================================
REM Скрипт остановки СУП для Windows 10
REM =============================================================================

cd /d "%~dp0"

echo Остановка системы СУП...
docker compose down

if %errorLevel% equ 0 (
    echo.
    echo Система остановлена.
) else (
    echo.
    echo ОШИБКА при остановке системы!
)

pause

