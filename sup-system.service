[Unit]
Description=СУП - Система Управления Проектами
Requires=docker.service
After=docker.service network.target

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/home/user/crm-system
ExecStart=/usr/bin/docker compose up -d
ExecStop=/usr/bin/docker compose down
TimeoutStartSec=0
User=user
Group=user

[Install]
WantedBy=multi-user.target

