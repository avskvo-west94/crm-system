@echo off
REM =============================================================================
REM Скрипт перезапуска СУП для Windows 10
REM =============================================================================

cd /d "%~dp0"

echo Перезапуск системы СУП...
docker compose restart

if %errorLevel% equ 0 (
    echo.
    echo Система перезапущена.
    echo Откройте браузер: http://localhost
) else (
    echo.
    echo ОШИБКА при перезапуске системы!
)

pause

